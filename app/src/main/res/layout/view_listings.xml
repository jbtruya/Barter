<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_listingImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="71dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="253dp"
            android:layout_height="18dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="start"
            android:text="Product Name"
            app:layout_constraintBottom_toTopOf="@+id/tv_listing_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_listingImage" />

        <TextView
            android:id="@+id/tv_listing_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="71dp"
            android:layout_marginEnd="181dp"
            android:layout_marginBottom="38dp"
            android:text="Tap to view the details"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>